<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/root"
    tools:context="com.tribaltech.android.scnstrikefirst.Wallet">

    <RelativeLayout
        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/status_bar">

        <Button
            android:id="@+id/menu"
            android:layout_width="45px"
            android:layout_height="33px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/game_buttons_margin"
            android:background="@drawable/menu_selector"
            android:onClick="toggle"
            android:textSize="@dimen/game_buttons_text_size" />

        <TextView
            android:id="@+id/headerText"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:singleLine="true"
            android:text="Wallet"
            android:textColor="#FFF"
            android:textSize="36px" />

        <TextView
            android:id="@+id/addCenter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/game_buttons_margin"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/my_game_selector"
            android:text=""
            android:textSize="25px"
            android:onClick="onClick"
            android:clickable="true" />

    </RelativeLayout>
    <!--ACT Add Center-->
    <RelativeLayout
        android:id="@+id/noItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="550px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No center added to wallet."
            android:textColor="@color/white"
            android:textSize="32px" />
    </RelativeLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/pointsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topHeaderParent"
        android:divider="@null"></ListView>

    <LinearLayout
        android:visibility="gone"
        android:layout_below="@+id/topHeaderParent"
        android:layout_marginBottom="30px"
        android:layout_alignParentBottom="true"
        android:id="@+id/pointsBtnParent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/addPoints"
            android:layout_width="720px"
            android:layout_height="330px"
            android:layout_gravity="top"
            android:layout_marginTop="50px"
            android:background="@drawable/walletxb"
            android:onClick="onClick"
            android:tag="mwar"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36px" />
        <!--Add points-->

        <Button
            android:id="@+id/redeemPoints"
            android:layout_width="720px"
            android:layout_height="330px"
            android:layout_gravity="top"
            android:layout_marginTop="50px"
            android:background="@drawable/walletwc"
            android:onClick="onClick"
            android:tag="mwar"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36px" />
        <!--Redeem Points-->

    </LinearLayout>
</RelativeLayout>
