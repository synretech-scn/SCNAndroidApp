<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_1"
    tools:context=".login">

    <Button
        android:id="@+id/back"
        android:visibility="gone"
        android:layout_width="90px"
        android:layout_height="90px"
        android:background="@drawable/back_selector"
        android:onClick="onClick"
        android:textSize="@dimen/game_buttons_text_size" />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="375px"
        android:layout_height="210px"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="71px"
        android:background="@drawable/xbowling_logo" />

    <LinearLayout
        android:id="@+id/termsParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="30px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55.8px"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/termsCheck"
                android:layout_width="81px"
                android:layout_height="81px"
                android:onClick="onClick"
                android:background="@drawable/box"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:text="* I agree to the XBowling "
                android:textColor="@color/white"
                android:textSize="36px" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Terms and"
                android:textColor="#0076FE"
                android:textSize="36px" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Conditions"
                android:textColor="#0076FE"
                android:textSize="36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:text=" and"
                android:textColor="@color/white"
                android:textSize="36px" />

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:text=" Privacy Policy."
                android:textColor="#0076FE"
                android:textSize="36px" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="50px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/emailCheck"
                android:layout_width="81px"
                android:layout_height="81px"
                android:onClick="onClick"
                android:background="@drawable/box"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:clickable="true"
                android:padding="0px"
                android:onClick="onClick"
                android:text="* I agree to receive email and/or electronic communication from XBowling and from its third party affiliates such as the bowling centres where I bowl."
                android:textColor="@color/white"
                android:textSize="36px" />
        </LinearLayout>

        <Button
            android:id="@+id/continueTerms"
            android:layout_width="340px"
            android:layout_height="81px"
            android:layout_gravity="center"
            android:layout_marginTop="95px"
            android:text="Continue"
            android:textSize="36px"
            android:textColor="@color/white"
            android:background="@drawable/blue_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick"
            android:tag="mhar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginSignupParent"
        android:layout_width="621px"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55.8px"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="104px">

            <Button
                android:id="@+id/email_icon"
                android:layout_width="28px"
                android:layout_height="27px"
                android:layout_centerVertical="true"
                android:background="@drawable/user" />

            <EditText
                android:id="@+id/email"
                android:layout_width="527.4px"
                android:layout_height="93.6px"
                android:layout_marginTop="5px"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/email_icon"
                android:layout_marginLeft="30px"
                android:hint="Email Address"
                android:background="#0000"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="34px">

                <requestFocus />
            </EditText>

        </RelativeLayout>

        <ImageView
            android:layout_width="621px"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_full" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="104px">

            <ImageView
                android:id="@+id/pass_icon"
                android:layout_width="22px"
                android:layout_height="26px"
                android:layout_centerVertical="true"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="527.4px"
                android:layout_height="93.6px"
                android:layout_marginTop="5px"
                android:layout_marginLeft="30px"
                android:background="#0000"
                android:layout_toRightOf="@+id/pass_icon"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="34px" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Forgot?"
                android:textColor="#0076FE"
                android:textSize="36px" />

        </RelativeLayout>

        <ImageView
            android:layout_width="621px"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_full" />

        <Button
            android:id="@+id/login"
            android:layout_width="540px"
            android:layout_height="81px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:text="Sign In"
            android:textSize="32px"
            android:textColor="@color/white"
            android:background="@drawable/blue_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick"
            android:tag="mhar" />

        <Button
            android:id="@+id/sign_up"
            android:layout_width="540px"
            android:layout_height="81px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:text="Sign Up"
            android:textSize="32.4px"
            android:background="@drawable/blue_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick"
            android:tag="mhar"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="621px"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px">

            <ImageView
                android:layout_width="621px"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:src="@drawable/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=" Or "
                android:textColor="@color/white"
                android:textSize="32.4px" />
        </RelativeLayout>

        <Button
            android:id="@+id/fb_login"
            android:layout_width="540px"
            android:layout_height="81px"
            android:layout_gravity="center"
            android:layout_marginTop="25px"
            android:text="Sign in with Facebook"
            android:textSize="32.4px"
            android:textColor="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/fb_button"
            android:onClick="onClick"
            android:tag="mhar" />

        <TextView
            android:id="@+id/join_us_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:text="(Sign In directly, if you have already \n    had SCN/Xbowling account)\n\n         Don't have account yet?"
            android:textColor="#FFFFFF"
            android:textSize="32px" />

        <Button
            android:id="@+id/join_us"
            android:layout_width="540px"
            android:layout_height="81px"
            android:layout_gravity="center"
            android:layout_marginTop="25px"
            android:alpha="0.8"
            android:text="Join Us!"
            android:textSize="32.4px"
            android:textColor="@color/white"
            android:background="@drawable/blue_round"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="onClick"
            android:tag="mhar" />

        <TextView
            android:id="@+id/sign_in_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="160px"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Already have account? Sign In Here."
            android:textColor="#ff0476ff"
            android:textSize="36px"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>