<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="110px"
    android:background="@drawable/item_large_background"
    android:clickable="false" >

    <RelativeLayout
        android:id="@+id/avgParent"
        android:layout_width="wrap_content"
        android:layout_height="75px"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/button1"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="40px"
            android:background="@drawable/app_icon" />

        <LinearLayout
            android:layout_width="280px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@+id/button1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:textColor="@color/white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/avgScore"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:layout_below="@+id/name"
                android:textColor="@color/white"
                android:textSize="24px" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/regionName"
        android:layout_toRightOf="@+id/avgParent"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_marginRight="20px"
        android:text="2"
        android:textColor="#FFF"
        android:textSize="24px"
        android:textStyle="bold" />


    <Button
        android:id="@+id/friend"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/regionName"
        android:layout_width="160px"
        android:padding="0px"
        android:layout_height="65px"
        android:layout_centerVertical="true"
        android:text="Add Friend"
        android:textSize="22px"
        android:gravity="center" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

</RelativeLayout>