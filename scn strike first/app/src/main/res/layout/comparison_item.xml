<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="178px"
    android:orientation="vertical"
    android:background="@drawable/item_large_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:background="@drawable/item_small_background"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/statName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20px"
            android:text="Lane 1"
            android:textColor="@color/white"
            android:textSize="25px" />

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="99px"
        android:background="@drawable/item_large_background">

        <TextView
            android:id="@+id/yourScore"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:text="Sharp Shooter"
            android:textColor="@color/white"
            android:textSize="32px" />

        <TextView
            android:id="@+id/oppScore"
            android:layout_width="0px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sharp Shooter"
            android:textColor="@color/white"
            android:textSize="32px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20px" />

</LinearLayout>