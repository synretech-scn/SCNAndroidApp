<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/status_bar">

        <Button
            android:id="@+id/menu"
            android:layout_width="45px"
            android:layout_height="33px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/game_buttons_margin"
            android:background="@drawable/menu_selector"
            android:onClick="toggle"
            android:textSize="@dimen/game_buttons_text_size" />

        <TextView
            android:id="@+id/centerName"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:singleLine="true"
            android:text="XB Pro Stats"
            android:textColor="#FFF"
            android:textSize="36px" />

        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/game_buttons_margin"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/my_game_selector"
            android:text="Filter"
            android:textSize="25px"
            android:onClick="onClick"
            android:clickable="true" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/tabParent"
        android:layout_margin="25px"
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/gamesTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_left_outline_semi_round"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="My Games"
            android:textColor="@color/white"
            android:textSize="26px" />

        <Button
            android:id="@+id/statsTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_outline"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="My Stats"
            android:textColor="@color/white"
            android:textSize="26px"/>

        <Button
            android:id="@+id/compareTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_outline"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Compare"
            android:textColor="@color/white"
            android:textSize="26px" />

        <Button
            android:id="@+id/settingsTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_right_outline_semi_round"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="26px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statsTabParent"
        android:layout_marginBottom="20px"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/summary"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pending_background"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Summary"
            android:textColor="@color/white"
            android:textSize="26px" />

        <Button
            android:id="@+id/graphs"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_height="match_parent"
            android:background="@drawable/pending_background"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Graphs"
            android:textColor="@color/white"
            android:textSize="26px"/>

        <Button
            android:id="@+id/pinStats"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pending_background"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Pin Stats"
            android:textColor="@color/white"
            android:textSize="26px" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

</LinearLayout>