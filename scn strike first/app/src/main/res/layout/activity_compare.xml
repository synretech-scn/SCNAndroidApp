<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/status_bar">

        <Button
            android:id="@+id/back"
            android:visibility="visible"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:onClick="onClick"
            android:textSize="@dimen/game_buttons_text_size" />

        <TextView
            android:id="@+id/centerName"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:singleLine="true"
            android:text="Comparison"
            android:textColor="#FFF"
            android:textSize="36px" />
    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/tabParent"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:layout_width="900px"
        android:layout_gravity="center_horizontal"
        android:layout_height="60px"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/gamesTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_left_outline_semi_round"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="My Games"
            android:textColor="@color/white"
            android:textSize="26px" />

        <Button
            android:id="@+id/statsTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_outline"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="My Stats"
            android:textColor="@color/white"
            android:textSize="26px"/>

        <Button
            android:id="@+id/compareTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_outline"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Compare"
            android:textColor="@color/white"
            android:textSize="26px" />

        <Button
            android:id="@+id/settingsTab"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_right_outline_semi_round"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="26px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statsTabParent"
        android:layout_marginBottom="5px"
        android:layout_width="600px"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_height="80px"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/summary"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pending_background"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Summary"
            android:textColor="@color/white"
            android:textSize="26px" />

        <Button
            android:id="@+id/graphs"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_height="match_parent"
            android:background="@drawable/pending_background"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Graphs"
            android:textColor="@color/white"
            android:textSize="26px"/>

        <Button
            android:id="@+id/pinStats"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/pending_background"
            android:gravity="center"
            android:onClick="statsTab"
            android:text="Pin Stats"
            android:textColor="@color/white"
            android:textSize="26px" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="You"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/oppName"
            android:layout_width="0px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Sharp Shooter"
            android:textColor="@color/white"
            android:textSize="36px" />

    </LinearLayout>

    <ListView
        android:layout_marginTop="20px"
        android:id="@+id/compareList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent"
        android:visibility="visible" />

</LinearLayout>