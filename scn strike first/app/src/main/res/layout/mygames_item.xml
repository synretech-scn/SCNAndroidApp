<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="110px"
    android:orientation="vertical"
    android:background="@drawable/item_large_background">

    <TextView
        android:layout_marginTop="5px"
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:text="Sharp Shooter"
        android:textColor="@color/white"
        android:textSize="32px" />


    <TextView
        android:id="@+id/tag1"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:visibility="visible"
        android:layout_marginTop="10px"
        android:layout_below="@+id/playerName"
        android:layout_width="160px"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerName"
        android:background="@drawable/white_round"
        android:text="Shooter"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="26px" />

    <TextView
        android:id="@+id/tag2"
        android:singleLine="true"
        android:paddingLeft="10px"
        android:gravity="center"
        android:visibility="visible"
        android:paddingRight="10px"
        android:layout_marginTop="10px"
        android:layout_below="@+id/playerName"
        android:layout_width="160px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/tag1"
        android:background="@drawable/white_round"
        android:text="Shooter"
        android:textColor="@color/black"
        android:textSize="26px" />

    <Button
        android:id="@+id/dotsBtn"
        android:layout_width="50px"
        android:layout_height="12px"
        android:layout_marginLeft="20px"
        android:visibility="gone"
        android:layout_below="@+id/playerName"
        android:background="@drawable/dots"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/tag2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="507px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/value"
            android:singleLine="true"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/type"
            android:layout_width="170px"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="567px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textColor="@color/white"
            android:textSize="25px" />
    </LinearLayout>

    <Button
        android:layout_width="22px"
        android:layout_height="36px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:background="@drawable/arrow"
        android:tag="mlar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dropdown_separator" />

</RelativeLayout>