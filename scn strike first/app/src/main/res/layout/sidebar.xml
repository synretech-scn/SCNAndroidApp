<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="610px"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="@drawable/side_item_back"
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:paddingLeft="40px"

        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Home"
        android:textColor="@drawable/text_color_selector"
        android:textSize="36px"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:id="@+id/rewardpoints"
        android:background="@drawable/side_item_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Loyalty and Rewards"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/sidebar_item_text_size" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:id="@+id/coupon"
        android:background="@drawable/side_item_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Special Promotions"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/sidebar_item_text_size" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:id="@+id/goBowling"
        android:background="@drawable/side_item_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Go XBowling"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/sidebar_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:id="@+id/xbpro"
        android:gravity="center_vertical"
        android:text="XB Pro Stats"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/sidebar_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:id="@+id/liveScore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:background="@drawable/side_item_back"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="Live Score"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/sidebar_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:id="@+id/userProfile"
        android:gravity="center_vertical"
        android:text="Player Profile"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/sidebar_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <RelativeLayout
        android:id="@+id/notificationParent"
        android:background="@drawable/side_item_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidebar_item_height"
            android:paddingLeft="40px"
            android:gravity="center_vertical"
            android:focusable="false"
            android:clickable="false"
            android:text="Notifications"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/sidebar_item_text_size" />

        <TextView
            android:layout_width="90px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginRight="20px"
            android:text=""
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/notificationCount"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_corner"
            android:textColor="@color/white"
            android:textSize="@dimen/sidebar_item_text_size" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_item_height"
        android:paddingLeft="40px"
        android:background="@drawable/side_item_back"
        android:gravity="center_vertical"
        android:text="Logout"
        android:textColor="#FF3823"
        android:textSize="@dimen/sidebar_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

</LinearLayout>