<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="144px"
    android:background="@drawable/item_large_background">

    <LinearLayout
        android:layout_width="280px"
        android:id="@+id/nameParent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:text="Boo &amp; Mac 2011"
            android:textColor="@color/white"
            android:textSize="36px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/button1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Region : "
                android:textColor="@color/white"
                android:textSize="25px" />

            <TextView
                android:id="@+id/region_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="TX"
                android:textColor="@color/white"
                android:textSize="25px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="180px"
        android:id="@+id/avgParent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/nameParent"
        android:layout_marginLeft="20px">

        <TextView
            android:id="@+id/userAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="1234/1234"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:text="Avg/Handicap"
            android:textColor="@color/white"
            android:textSize="25px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/avgParent"
        android:layout_marginLeft="20px">

        <TextView
            android:id="@+id/opponentScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="1234/1234"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:text="Score/Handicap"
            android:textColor="@color/white"
            android:textSize="25px" />
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:background="@drawable/dropdown_separator" />

    <Button
        android:layout_width="22px"
        android:layout_height="36px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:background="@drawable/arrow"
        android:tag="mlar"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="true" />
</RelativeLayout>