<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:background="@drawable/status_bar"
        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px">

        <Button
            android:id="@+id/back"
            android:visibility="visible"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:onClick="onClick"
            android:textSize="@dimen/game_buttons_text_size" />

        <TextView
            android:id="@+id/header"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:singleLine="true"
            android:text="Preview Message"
            android:textColor="#FFF"
            android:textSize="35px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_below="@+id/topHeaderParent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px">

        <EditText
            android:id="@+id/email"
            android:layout_width="900px"
            android:layout_height="80px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_field"
            android:gravity="left|center_vertical"
            android:hint="To: Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10px"
            android:paddingRight="80px"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="25px" />

        <Button
            android:id="@+id/addEmails"
            android:layout_width="46px"
            android:layout_height="41px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:background="@drawable/add_email_selector" />
    </RelativeLayout>

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="900px"
        android:layout_height="80px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_below="@+id/emailContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1px"
        android:background="@drawable/text_field"
        android:gravity="left|center_vertical"

        android:hint="Subject: Check out XBowling - Bowl. Have Fun. Win Prizes!"
        android:textColorHint="@color/black"
        android:editable="false"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:textColor="#000"
        android:textSize="25px" />


    <TextView
        android:id="@+id/textView1"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errorMsg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10px"
        android:layout_marginTop="40px"
        android:text="I just downloaded the Free XBowling App on my Apple/Android device, and I am\nwinning real prizes while I bowl and compete! Please join me by downloading and\nactivating the App so we can enjoy XBowling together.\n\nClick here to download!\n\nNote: If the link above does not work, copy and paste the following URL into your browser: http://bit.ly/xbowlme"
        android:textColor="#fff"
        android:textSize="36px" />

    <Button
        android:layout_below="@+id/textView1"
        android:id="@+id/send"
        android:layout_width="258px"
        android:layout_centerHorizontal="true"
        android:layout_height="88px"
        android:text="Send"
        android:layout_marginTop="70px"
        android:background="@drawable/blue_round"
        android:tag="mlar" />
</RelativeLayout>
