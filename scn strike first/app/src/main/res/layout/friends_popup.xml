<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/status_bar">

        <Button
            android:id="@+id/menu"
            android:layout_width="45px"
            android:layout_height="33px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/game_buttons_margin"
            android:background="@drawable/menu_selector"
            android:onClick="toggle"
            android:textSize="@dimen/game_buttons_text_size" />


        <TextView
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:text="Friends"
            android:id="@+id/headerText"
            android:singleLine="true"
            android:textColor="#FFF"
            android:textSize="36px" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/game_buttons_margin"
            android:paddingLeft="20px"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@drawable/text_color_selector"
            android:text="Share"
            android:textSize="25px"
            android:onClick="onClick"
            android:clickable="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="21px"
        android:id="@+id/tabs"
        android:layout_width="522px"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:layout_marginBottom="21px"
        android:layout_height="67px"
        android:visibility="visible"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allxbowlerBtn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="All XBowlers"
            android:textColor="@color/white"
            android:textSize="30px"
            android:onClick="onClick"
            android:layout_height="match_parent"
            android:background="@drawable/blue_left_outline_semi_round"
            android:tag="mwar" />

        <Button
            android:id="@+id/friendsBtn"
            android:layout_width="0px"
            android:text="My Friends"
            android:textColor="@color/white"
            android:textSize="30px"
            android:onClick="onClick"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_right_semi_round"
            android:tag="mwar" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchParent"
        android:layout_width="match_parent"
        android:background="@drawable/item_small_background"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/searchIcon"
            android:layout_width="31px"
            android:layout_height="31px"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:background="@drawable/search_icon" />

        <EditText
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/searchIcon"
            android:id="@+id/searchBowler"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="101px"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="Search"
            android:imeActionLabel="Search"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:singleLine="true"
            android:tag="mwar"
            android:textColorHint="@color/white"
            android:textSize="32px">

        </EditText>
    </RelativeLayout>

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="40px"
        android:visibility="gone" />

    <ListView
        android:listSelector="@android:color/transparent"
        android:id="@+id/friendsList"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/addOpponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:cacheColorHint="#0000"
        android:visibility="visible"
        android:divider="@null"></ListView>

</LinearLayout>