<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/root"
    tools:context="com.tribaltech.android.scnstrikefirst.Tags">

    <RelativeLayout

        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/status_bar">


        <Button
            android:id="@+id/back"
            android:visibility="visible"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:onClick="onClick"
            android:textSize="@dimen/game_buttons_text_size" />

        <TextView
            android:id="@+id/centerName"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:singleLine="true"
            android:text="Tags"
            android:textColor="#FFF"
            android:textSize="36px" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/topHeaderParent"
        android:layout_above="@+id/saveParent"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="754px">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView

                android:id="@+id/tagList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0px"
                android:listSelector="@android:color/transparent"
                android:visibility="visible" />


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/saveParent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px">

        <EditText
            android:layout_marginTop="30px"
            android:id="@+id/enterTag"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="100"
            android:inputType="textNoSuggestions"
            android:background="@drawable/item_large_background"
            android:textColor="@color/white"
            android:hint="Enter tag..."
            android:paddingLeft="30px"
            android:ems="10">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/saveTags"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:background="@drawable/blue_round"
            android:onClick="onClick"
            android:tag="mwar"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="36px" />

    </LinearLayout>

</RelativeLayout>
