<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="110px"
    android:orientation="vertical"
    android:focusable="false"
    android:background="@drawable/item_large_background">

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:focusable="false"
        android:text="Sharp Shooter"
        android:textColor="@color/white"
        android:textSize="32px" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="507px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/value"
            android:singleLine="true"
            android:focusable="false"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/type"
            android:layout_width="170px"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="@color/white"
            android:textSize="25px" />
    </LinearLayout>

    <Button
        android:layout_width="22px"
        android:layout_height="36px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:focusable="false"
        android:background="@drawable/arrow"
        android:tag="mlar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:layout_alignParentBottom="true"
        android:focusable="false"
        android:background="@drawable/dropdown_separator" />

</RelativeLayout>