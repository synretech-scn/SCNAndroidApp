<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/root"
    android:orientation="vertical"
    tools:context="com.tribaltech.android.scnstrikefirst.Wallet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/primaryText"

                android:layout_marginTop="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="Please hand your device to a service employee to enter the code"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:textSize="36px" />

            <RelativeLayout
                android:id="@+id/addTextParent"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="50px"
                android:visibility="gone"
                android:background="@drawable/item_small_background">

                <TextView
                    android:id="@+id/addText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:textColor="#FFF"
                    android:textSize="25px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/topTextParent"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_below="@+id/primaryText"
                android:layout_marginTop="10px"
                android:background="@drawable/item_small_background">

                <TextView
                    android:id="@+id/topText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:text="Enter Code"
                    android:textColor="#FFF"
                    android:textSize="25px" />
            </RelativeLayout>

            <EditText
                android:id="@+id/passcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dropdown_height"

                android:layout_centerHorizontal="true"
                android:layout_below="@+id/topTextParent"
                android:background="@drawable/item_large_background"

                android:ems="10"

                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dropdown_text_size">

                <requestFocus />

            </EditText>

            <TextView
                android:id="@+id/dummyView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dropdown_height"

                android:layout_centerHorizontal="true"
                android:layout_below="@+id/topTextParent"
                android:background="@color/transparent"

                android:ems="10"
                android:clickable="true"
                android:longClickable="false"
                android:focusable="false"
                android:singleLine="true"

                android:textSize="@dimen/dropdown_text_size"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numericPanel"
                android:layout_below="@+id/passcode"
                android:layout_gravity="center_horizontal"
                android:layout_margin="40px"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/rowOne">

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericOne"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg"

                        />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:layout_weight="1"
                        android:id="@+id/numericTwo"

                        android:text="2"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:layout_weight="1"
                        android:id="@+id/numericThree"

                        android:text="3"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/rowTwo"
                    android:layout_below="@+id/rowOne">

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericFour"
                        android:layout_weight="1"
                        android:text="4"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericFive"
                        android:text="5"
                        android:layout_weight="1"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericSix"
                        android:layout_weight="1"
                        android:text="6"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/rowThree"
                    android:layout_below="@+id/rowTwo">

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericSeven"
                        android:layout_weight="1"
                        android:text="7"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericEight"
                        android:layout_weight="1"
                        android:text="8"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericNine"
                        android:layout_weight="1"
                        android:text="9"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/rowFour"
                    android:layout_below="@+id/rowThree">

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"

                        android:layout_weight="1"

                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:id="@+id/numericZero"
                        android:text="0"
                        android:layout_weight="1"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />

                    <Button
                        android:layout_width="300px"
                        android:layout_height="110px"
                        android:text="DEL"
                        android:id="@+id/clearButton"
                        android:layout_weight="1"
                        android:layout_margin="2px"
                        android:background="@drawable/numpad_button_bg" />
                </LinearLayout>
            </RelativeLayout>


            <Button
                android:id="@+id/submit"
                android:layout_alignParentBottom="true"
                android:layout_width="350px"
                android:layout_height="110px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:background="@drawable/blue_round"
                android:onClick="onClick"
                android:layout_marginBottom="30px"
                android:layout_centerHorizontal="true"
                android:tag="mwar"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="36px" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
