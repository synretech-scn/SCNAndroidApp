<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:background="@drawable/item_large_background">

    <TextView
        android:id="@+id/statName"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0px"
        android:gravity="center"
        android:text="Single Pin Spares"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textSize="28px" />

    <TextView
        android:id="@+id/statValue"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6px"
        android:gravity="center"
        android:singleLine="true"
        android:text="Tap to Show Status"
        android:textColor="@color/white"
        android:textSize="28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_separator_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dropdown_separator" />
</RelativeLayout>
