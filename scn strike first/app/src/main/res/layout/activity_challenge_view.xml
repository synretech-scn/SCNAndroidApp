<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.tribaltech.android.scnstrikefirst.ChallengeView">

    <RelativeLayout
        android:id="@+id/topHeaderParent"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/status_bar">

        <Button
            android:id="@+id/back"
            android:visibility="visible"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:onClick="onClick"
            android:textSize="@dimen/game_buttons_text_size" />

        <TextView
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:singleLine="true"
            android:id="@+id/challengeType"
            android:textColor="#FFF"
            android:textSize="36px"
            android:text="Challenge View" />

        <TextView
            android:id="@+id/myGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/game_buttons_margin"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/my_game_selector"
            android:text="My Game"
            android:visibility="gone"
            android:textSize="25px"
            android:onClick="onClick"
            android:clickable="true" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameParent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liveParent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/liveMessage"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:text="You are currently not entered in a live game."
            android:textSize="40px"
            />

        <Button
            android:id="@+id/createGame"
            android:layout_width="330px"
            android:layout_height="80px"
            android:layout_marginTop="60px"
            android:background="@drawable/blue_round"
            android:onClick="onClick"
            android:text="Create Game"
            android:textColor="@color/white"
            android:textSize="36px" />

        <Button
            android:id="@+id/joinGame"
            android:layout_marginTop="30px"
            android:layout_width="330px"
            android:layout_height="80px"
            android:background="@drawable/blue_round"
            android:onClick="onClick"
            android:text="Join Game"
            android:textColor="@color/white"
            android:textSize="36px" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="right" />

</LinearLayout>