<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.tribaltech.android.scnstrikefirst.GameScreen"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topHeaderParent"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="@drawable/status_bar">

            <Button
                android:id="@+id/menu"
                android:layout_width="45px"
                android:visibility="gone"
                android:layout_height="33px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/game_buttons_margin"
                android:background="@drawable/menu_selector"
                android:onClick="toggle"
                android:textSize="@dimen/game_buttons_text_size" />

            <Button
                android:id="@+id/back"
                android:visibility="gone"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:background="@drawable/back_selector"
                android:onClick="onClick"
                android:textSize="@dimen/game_buttons_text_size" />

            <TextView
                android:id="@+id/centerName"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textSize="36px" />

            <RelativeLayout
                android:id="@+id/sideMenu"
                android:layout_width="63px"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_marginRight="@dimen/game_buttons_margin"
                android:layout_alignParentRight="true"
                android:onClick="onClick">

                <Button
                    android:layout_width="63px"
                    android:layout_height="17px"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="gone"
                    android:background="@drawable/side_menu_selector" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/frameView"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px">


            <RelativeLayout
                android:id="@+id/scoringParent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25px"
                android:visibility="visible">

                <Button
                    android:id="@+id/lastFrameLeft"
                    android:layout_width="45px"
                    android:visibility="gone"
                    android:layout_height="45px"
                    android:onClick="onClick"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pin_left_selector"
                    android:tag="mwar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px">

                        <Button
                            android:id="@+id/previousThrow"
                            android:layout_width="216px"
                            android:layout_height="54px"
                            android:layout_marginLeft="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Previous Throw"
                            android:textSize="@dimen/game_buttons_text_size" />

                        <Button
                            android:id="@+id/previousFrame"
                            android:layout_width="216px"
                            android:layout_height="54px"
                            android:layout_marginLeft="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Previous Frame"
                            android:textSize="@dimen/game_buttons_text_size"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/throwLabel"
                            android:layout_width="163px"
                            android:layout_height="54px"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/white_round"
                            android:text="1st Throw"
                            android:textColor="@color/black"
                            android:textSize="@dimen/game_buttons_text_size" />

                        <Button
                            android:id="@+id/nextThrow"
                            android:layout_width="216px"
                            android:layout_height="54px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Next Throw"
                            android:textSize="@dimen/game_buttons_text_size" />

                        <Button
                            android:id="@+id/done"
                            android:layout_width="216px"
                            android:layout_height="54px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Done"
                            android:textSize="@dimen/game_buttons_text_size"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/nextFrame"
                            android:layout_width="216px"
                            android:layout_height="54px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Next Frame"
                            android:textSize="@dimen/game_buttons_text_size"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="674px"
                        android:layout_marginTop="15px"
                        android:layout_marginLeft="72px"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ballsLinear"
                            android:layout_width="674px"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/firstBallParent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                android:orientation="vertical"
                                android:layout_marginRight="50px">

                                <Button
                                    android:layout_width="163px"
                                    android:layout_height="54px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="15px"
                                    android:background="@drawable/white_round"
                                    android:text="1st Throw"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/game_buttons_text_size" />

                                <RelativeLayout
                                    android:id="@+id/first_ball_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:focusable="true">

                                    <include layout="@layout/pins_layout" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/secondBallParent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                android:visibility="visible">

                                <Button
                                    android:layout_width="163px"
                                    android:layout_height="54px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="15px"
                                    android:background="@drawable/white_round"
                                    android:text="2nd Throw"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/game_buttons_text_size" />

                                <RelativeLayout
                                    android:id="@+id/second_ball_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:focusable="true">

                                    <include layout="@layout/pins_layout" />
                                </RelativeLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/thirdBallParent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginLeft="50px"
                                android:orientation="vertical">

                                <Button
                                    android:layout_width="163px"
                                    android:layout_height="54px"
                                    android:layout_marginLeft="70px"
                                    android:layout_marginBottom="15px"
                                    android:background="@drawable/white_round"
                                    android:text="3rd Throw"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/game_buttons_text_size" />

                                <RelativeLayout
                                    android:id="@+id/third_ball_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:focusable="true">

                                    <include layout="@layout/pins_layout" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <Button
                            android:id="@+id/doneLand"
                            android:layout_below="@id/ballsLinear"
                            android:layout_marginTop="-50px"
                            android:layout_centerHorizontal="true"
                            android:layout_width="216px"
                            android:layout_height="54px"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Done"
                            android:textSize="@dimen/game_buttons_text_size"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/lastFrameRight"
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:layout_marginLeft="-5px"
                        android:onClick="onClick"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pin_right_selector"
                        android:tag="mwar" />

                    <RelativeLayout
                        android:id="@+id/strikeSpareParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20px"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:focusable="false">

                        <Button
                            android:id="@+id/strike"
                            android:layout_width="0px"
                            android:layout_height="0px"
                            android:layout_marginLeft="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text=""
                            android:visibility="gone"
                            android:textSize="@dimen/game_buttons_text_size" />

                        <Button
                            android:id="@+id/spare"
                            android:layout_width="184.5px"
                            android:layout_height="54px"
                            android:layout_marginLeft="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Spare"
                            android:textSize="@dimen/game_buttons_text_size"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/foul"
                            android:layout_width="184.5px"
                            android:layout_height="54px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/game_buttons_margin"
                            android:background="@drawable/round_selector"
                            android:onClick="onClick"
                            android:text="Foul"
                            android:visibility="gone"
                            android:textSize="@dimen/game_buttons_text_size" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_gravity="right"
                android:id="@+id/nameParent"
                android:layout_alignParentRight="true"
                android:layout_width="350px"
                android:layout_marginRight="16px"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="15px"
                    android:id="@+id/bowlerName"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Sharp Shooter"
                    android:textColor="#FFF"

                    android:textSize="36px" />

                <TextView
                    android:layout_marginTop="5px"
                    android:id="@+id/totalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="36"
                    android:textColor="#FFF"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ballStrikeParent"
                    android:layout_below="@+id/totalScore"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/ballNameParent"
                        android:layout_marginTop="40px"
                        android:layout_width="185px"
                        android:background="@drawable/black_round"
                        android:layout_alignParentRight="true"
                        android:layout_height="54px">

                        <EditText
                            android:id="@+id/ballNameText"
                            android:layout_width="185px"
                            android:layout_height="@dimen/dropdown_height"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:ems="10"
                            android:background="#0000"
                            android:focusable="false"
                            android:hint="Ball Name"
                            android:gravity="center"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="30px"
                            android:paddingRight="40px"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="25px"></EditText>

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="22px"
                            android:layout_height="45px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15px"
                            android:background="@drawable/drop_arrow_selector"
                            android:tag="mlar" />

                        <Spinner
                            android:id="@+id/ballType"
                            android:layout_width="185px"
                            android:layout_height="@dimen/dropdown_height"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="#0000"
                            android:popupBackground="#000000"
                            android:spinnerMode="dropdown" />
                    </RelativeLayout>

                    <Button
                        android:layout_marginTop="40px"
                        android:id="@+id/pocket"
                        android:layout_width="184.5px"
                        android:layout_height="54px"
                        android:background="@drawable/round_selector"
                        android:onClick="onClick"
                        android:text="Pocket"
                        android:tag="off"
                        android:textSize="@dimen/game_buttons_text_size" />

                    <Button
                        android:layout_marginTop="40px"
                        android:id="@+id/brooklyn"
                        android:layout_width="184.5px"
                        android:layout_height="54px"
                        android:background="@drawable/round_selector"
                        android:onClick="onClick"
                        android:text="Brooklyn"
                        android:tag="off"
                        android:textSize="@dimen/game_buttons_text_size" />

                    <View
                        android:id="@+id/demoSpaceView"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40px"/>

                    <RelativeLayout
                        android:id="@+id/challengeParent"
                        android:layout_width="322px"
                        android:onClick="onClick"
                        android:layout_height="54px"
                        android:layout_marginTop="30px"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/blue_round"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30px"
                            android:clickable="false"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:focusable="false"
                            android:text="Enter a Challenge"
                            android:textSize="32px" />
                    </RelativeLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/tagsListView"
                    android:visibility="gone"
                    android:dividerHeight="0dp"
                    android:layout_below="@+id/totalScore"
                    android:layout_centerHorizontal="true"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/summaryParent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <Button
                        android:id="@+id/backToPinView"
                        android:onClick="onClick"
                        android:layout_marginLeft="30px"
                        android:layout_width="170px"
                        android:layout_height="54px"
                        android:background="@drawable/blue_round"
                        android:text="Pin View"
                        android:textColor="@color/white"
                        android:textSize="@dimen/game_buttons_text_size" />

                    <Button
                        android:layout_width="220px"
                        android:layout_height="54px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/white_round"
                        android:text="Game Summary"
                        android:textColor="@color/black"
                        android:textSize="@dimen/game_buttons_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20px" />

                <ListView
                    android:id="@+id/summaryList"
                    android:layout_width="match_parent"
                    android:layout_height="370px"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"></ListView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bowlAgainParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="71px"
                android:visibility="gone">

                <Button
                    android:id="@+id/postGame"
                    android:layout_width="630px"
                    android:layout_height="80px"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/blue_round"
                    android:onClick="onClick"
                    android:text="Post as a Challenge"
                    android:textColor="@color/white"
                    android:textSize="36px" />

                <RelativeLayout
                    android:id="@+id/bowlAgain"
                    android:layout_below="@+id/postGame"
                    android:layout_width="270px"
                    android:layout_height="80px"
                    android:layout_marginTop="40px"
                    android:layout_alignLeft="@+id/postGame"
                    android:background="@drawable/white_blue_round"
                    android:onClick="onClick"
                    android:clickable="true">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Bowl Again"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textSize="36px" />

                    <!--<TextView
                        android:layout_marginTop="-10px"
                        android:layout_below="@+id/postText"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="as a Challenge"
                        android:textColor="@color/black"
                        android:textSize="25px" />-->

                </RelativeLayout>

                <Button
                    android:id="@+id/shareOnFb"
                    android:layout_marginTop="40px"
                    android:layout_width="270px"
                    android:layout_height="80px"
                    android:layout_below="@+id/postGame"
                    android:layout_alignRight="@+id/postGame"
                    android:background="@drawable/white_blue_round"
                    android:onClick="onClick"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:textSize="36px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gameSummary"
        android:layout_width="630px"
        android:layout_height="80px"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33px"
        android:background="@drawable/blue_round"
        android:onClick="onClick"
        android:text="Game Summary"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="36px" />

    <Button
        android:id="@+id/coachView"
        android:layout_width="630px"
        android:layout_height="80px"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33px"
        android:background="@drawable/blue_round"
        android:onClick="onClick"
        android:text="Coach View"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="36px" />

    <RelativeLayout
        android:id="@+id/strikeSpareParentPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RelativeLayout>
</RelativeLayout>